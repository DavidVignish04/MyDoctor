            justify-content: center;
            list-style: none;
            gap: 10px;
            position: relative;
        }
        
        .breadcrumb li {
            display: flex;
            align-items: center;
        }
        
        .breadcrumb a {
            color: var(--primary);
            text-decoration: none;
            transition: var(--transition);
        }
        
        .breadcrumb a:hover {
            color: var(--primary-dark);
        }
        
        .breadcrumb i {
            margin: 0 10px;
            font-size: 12px;
            color: var(--dark-light);
        }
        
        /* Sort Options */
        .sort-options {
            display: flex;
            justify-content: flex-end;
            margin: 30px 0 20px;
        }
        
        .sort-select {
            padding: 12px 15px;
            border: 1px solid var(--gray);
            border-radius: var(--radius);
            font-size: 16px;
            background: white;
            cursor: pointer;
            transition: var(--transition);
        }
        
        .sort-select:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 2px rgba(42, 125, 225, 0.2);
        }
        
        /* Filters Section */
        .filters {
            background: white;
            padding: 30px;
            margin: 20px 0 40px;
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            transition: var(--transition);
        }
        
        .filters:hover {
            box-shadow: var(--shadow-hover);
        }
        
        .filter-row {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }
        
        .filter-group {
            flex: 1;
            min-width: 250px;
        }
        
        .filter-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: var(--dark);
        }
        
        .filter-group select, .filter-group input {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid var(--gray);
            border-radius: var(--radius);
            font-size: 16px;
            transition: var(--transition);
        }
        
        .filter-group select:focus, .filter-group input:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 2px rgba(42, 125, 225, 0.2);
        }
        
        /* Doctors Grid */
        .doctors-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 30px;
            margin: 50px 0;
            justify-items: center;
        }
        
        .doctor-card {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            background: white;
            border-radius: var(--radius);
            overflow: hidden;
            box-shadow: var(--shadow);
            transition: var(--transition);
            position: relative;
            width: 100%;
            max-width: 350px;
        }
        
        .doctor-card:hover {
            transform: translateY(-10px);
            box-shadow: var(--shadow-hover);
        }
        
        .doctor-img {
            height: 200px;
            background: linear-gradient(135deg, var(--primary-light) 0%, var(--secondary) 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--primary);
            font-size: 80px;
            position: relative;
            overflow: hidden;
        }
        
        .doctor-img:before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(42, 125, 225, 0.1) 0%, rgba(225, 241, 255, 0.3) 100%);
        }
        
        .availability-status {
            position: absolute;
            top: 15px;
            right: 15px;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            z-index: 2;
        }
        
        .status-available {
            background: var(--success);
            color: white;
        }
        
        .status-limited {
            background: var(--warning);
            color: white;
        }
        
        .doctor-info {
            padding: 25px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }
        
        .doctor-info h3 {
            font-size: 20px;
            margin-bottom: 5px;
            color: var(--dark);
        }
        
        .doctor-specialty {
            color: var(--primary);
            margin-bottom: 10px;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 5px;
        }
        
        .doctor-rating {
            color: var(--warning);
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 5px;
        }
        
        .working-hours {
            margin: 15px 0;
            flex-grow: 1;
        }
        
        .working-hours h4 {
            margin-bottom: 10px;
            font-size: 16px;
            color: var(--dark);
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .hours-list {
            list-style: none;
        }
        
        .hours-list li {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            border-bottom: 1px solid var(--gray);
        }
        
        .hours-list li:last-child {
            border-bottom: none;
        }
        
        .day {
            color: var(--dark-light);
        }
        
        .time {
            font-weight: 500;
        }
        
        .doctor-actions {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }
        
        .no-results {
            grid-column: 1 / -1;
            text-align: center;
            padding: 60px 40px;
            font-size: 18px;
            color: var(--dark-light);
            background: white;
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            width: 100%;
        }
        
        .no-results i {
            font-size: 48px;
            margin-bottom: 20px;
            color: var(--gray);
        }
        
        /* Footer */
        footer {
            background: var(--dark);
            color: white;
            padding: 60px 0 30px;
            margin-top: 80px;
        }
        
        .footer-content {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 40px;
            margin-bottom: 40px;
        }
        
        .footer-column h3 {
            font-size: 20px;
            margin-bottom: 20px;
            position: relative;
            padding-bottom: 10px;
        }
        
        .footer-column h3:after {
            content: '';
            position: absolute;
            left: 0;
            bottom: 0;
            width: 40px;
            height: 2px;
            background: var(--primary);
        }
        
        .footer-column ul {
            list-style: none;
        }
        
        .footer-column ul li {
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .footer-column a {
            color: #dfe6e9;
            text-decoration: none;
            transition: var(--transition);
        }
        
        .footer-column a:hover {
            color: var(--primary);
            padding-left: 5px;
        }
        
        .social-icons {
            display: flex;
            gap: 15px;
            margin-top: 20px;
        }
        
        .social-icons a {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            transition: var(--transition);
        }
        
        .social-icons a:hover {
            background: var(--primary);
            transform: translateY(-3px);
        }
        
        .copyright {
            text-align: center;
            padding-top: 30px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            color: #b2bec3;
        }
        
        /* Responsive Design */
        @media (max-width: 768px) {
            .header-content {
                flex-direction: column;
                gap: 20px;
            }
            
