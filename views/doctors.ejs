            color: var(--dark);
            margin-bottom: 15px;
            position: relative;
        }
        
        .page-header p {
            font-size: 18px;
            color: var(--dark-light);
            max-width: 600px;
            margin: 0 auto 25px;
            position: relative;
        }
        
        .breadcrumb {
