                return;
            }

            list.forEach(doc => {
                let hoursHTML = "";
                for (let day in doc.workingHours) {
                    hoursHTML += `
                        <li>
                            <span class="day">${day}</span>
                            <span class="time">${doc.workingHours[day][0]} - ${doc.workingHours[day][1]}</span>
                        </li>
                    `;
                }

                // Determine status class based on availability
                const statusClass = doc.availability.includes("Available") ? "status-available" : "status-limited";

                container.innerHTML += `
                    <div class="doctor-card">
                        <div class="doctor-img">
                            <i class="fas fa-user-md"></i>
                            <span class="availability-status ${statusClass}">${doc.availability}</span>
                        </div>
                        <div class="doctor-info">
                            <h3>${doc.name}</h3>
                            <p class="doctor-specialty"><i class="fas fa-stethoscope"></i> ${doc.specialty}</p>
                            <div class="doctor-rating">
                                <i class="fas fa-star"></i> ${doc.rating} <span style="color: var(--dark-light); font-weight: normal;">(${doc.reviews} reviews)</span>
                            </div>

                            <div class="working-hours">
                                <h4><i class="far fa-clock"></i> Working Hours:</h4>
                                <ul class="hours-list">${hoursHTML}</ul>
                            </div>

                            <div class="doctor-actions">
                                <button class="btn btn-outline btn-small"><i class="far fa-user"></i> Profile</button>
                                <button class="btn btn-primary btn-small" data-doctor="${doc.name}"><i class="far fa-calendar-check"></i> Book</button>
                            </div>
                        </div>
                    </div>
                `;
            });
            
            // Add event listeners to buttons after rendering
            addButtonListeners();
        }
        document.querySelectorAll('.btn-primary').forEach(button => {
            button.addEventListener('click', function () {
                const doctorName = this.getAttribute("data-doctor");
                window.location.href = `/booking?doctor=${encodeURIComponent(doctorName)}`;
            });
        });


        function addButtonListeners() {
            document.querySelectorAll('.btn-primary').forEach(button => {
                button.addEventListener('click', function () {
                    const doctorName = this.getAttribute("data-doctor");
                    window.location.href = `/booking?doctor=${encodeURIComponent(doctorName)}`;
                });
            });
        }



        // Filter doctors
        function filterDoctors() {
            const specialty = document.getElementById("specialty").value;
            const date = document.getElementById("availability").value;
            const search = document.getElementById("search").value.toLowerCase();
            const sortBy = document.getElementById("sortBy").value;

            const day = date ?
                ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"][new Date(date).getDay()]
                : null;

            let filtered = doctors.filter(doc => {
                // Filter by specialty
                if (specialty && doc.specialty !== specialty) return false;
                
                // Filter by search term
                if (search && !doc.name.toLowerCase().includes(search)) return false;
                
                // Filter by availability on selected day
                if (day && !doc.workingHours[day]) return false;
                
                return true;
            });

            // Sort results
            filtered.sort((a, b) => {
                switch(sortBy) {
                    case 'name':
                        return a.name.localeCompare(b.name);
                    case 'rating':
                        return b.rating - a.rating;
                    case 'specialty':
                        return a.specialty.localeCompare(b.specialty);
                    default:
                        return 0;
                }
            });

            renderDoctors(filtered);
        }

        // Event listeners for filters
        document.getElementById("specialty").addEventListener("change", filterDoctors);
        document.getElementById("availability").addEventListener("change", filterDoctors);
        document.getElementById("search").addEventListener("keyup", filterDoctors);
        document.getElementById("sortBy").addEventListener("change", filterDoctors);

        // Initial render
        renderDoctors(doctors);
    });
    </script>
